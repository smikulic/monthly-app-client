{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["package.json", "yarn.lock"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:ios": {
      "cache": false,
      "persistent": true
    },
    "dev:clean": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".expo/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [
        "coverage/**",
        "test-results/**",
        "playwright-report/**",
        "blob-report/**"
      ]
    },
    "codegen": {
      "dependsOn": []
    }
  }
}
